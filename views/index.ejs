<!DOCTYPE html>	<!-- Declared the document type -->
<html>
<head>
	<title>jQuery</title>
	<meta charset="UTF-8">
	<link rel="stylesheet" type="text/css" href="./assets/css/bug_fighter.css">
	<link rel="stylesheet" type="text/css" href="./assets/css/style.css">
	<!-- Jquery -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

	<script type="text/javascript" src="/socket.io/socket.io.js"></script>
	<script type="text/javascript" src="./assets/js/choose_player.js"></script>
	<script type="text/javascript" src="./assets/js/socket_events.js"></script>
	<script type="text/javascript" src="./assets/js/functions.js"></script>
</head>
<body>
	<div id="audio_area"></div>
	<div class="modal" tabindex="-1" id="game_modal">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-body"></div>
			</div>
		</div>
	</div>
	<section id="selection" width="100%" class="text-center">
		<div id="wrapper">
			<h1>Choose Player <br><span id="pick_name"></span></h1>
			<div class="text-center" id="player">
				<img class="picked" src="./assets/images/ryu_move.gif" />
				<h2 id="player_pick"></h2>	
			</div>
			<input type="hidden" id="fighter" value="Ryu"/>
			<input type="hidden" id="player_default" value="./assets/images/ryu_move.gif"/>
		</div> 
	
		<div class="text-center" id="characters">
			<img name="Ryu" src="./assets/images/ryu.png" data-animated-img="./assets/images/ryu_move.gif" class="chosen"/>
			<!-- <img name="Guile" src="./assets/images/guile.png" data-animated-img="./assets/images/guile_move.gif"/>
			<img name="Vega"src="./assets/images/vega.png" data-animated-img="./assets/images/vega_move.gif"/>
			<img name="Fei Long" src="./assets/images/feilong.png" data-animated-img="./assets/images/feilong_move.gif"/> -->
			<img name="Blanka" src="./assets/images/blanka.png" data-animated-img="./assets/images/blanka_move.gif"/>
		</div>
		
		<div id="timer" class="text-center"></div>	
	</section>

	<div id="score_board" class="row mt-3" hidden="true">
		<div class="score-bar col-4 p-0">
			<div class="score-fill" id="player_1_score"></div>
		</div>
		<h1 class="col"><span id="player_1_icon"></span> vs <span id="player_2_icon"></span></h1>
		<div class="score-bar col-4 p-0">
			<div class="score-fill" id="player_2_score"></div>
		</div>
	</div>
	<section id="arena" width="100%">
	</section>
</body>
</html>
